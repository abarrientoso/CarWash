@model Carwash.Models.Binnacle
@{
    ViewBag.Title = "Create";
}
<style>
    .validacion {
        color: red;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <form style="margin-top: 0px; margin-bottom: 25px" asp-action="Create" method="post" id="formularioMio" enctype="multipart/form-data">
        <section class="vh-100">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card shadow-2-strong" style="border-radius: 1rem; box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3)">
                            <div class="card-body p-5 text-center">
                                <div class="form-group">


                                    <label>Tipo</label>
                                    @Html.DropDownListFor(model => model.type, new SelectList(new[] { "Ingreso", "Gasto" }), "Seleccione una opcion", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger", style = "font-style: italic; font-size: 12px;" })


                                </div>
                                

                                <div class="form-group">
                                    <label>Monto</label>
                                    @Html.TextBoxFor(model => model.description, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger", style = "font-style: italic; font-size: 12px;" })
                                </div>
                                                              
                                <div class="form-group">
                                    <input type="submit" value="Guardar" class="btn btn-success" />
                                    @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-secondary" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
}
