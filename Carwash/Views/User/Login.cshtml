@model Carwash.Models.users

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Lavacar - Iniciar Sesión </title>
    <link rel="stylesheet" href="~/UserTemp/css/registration.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    @using (Html.BeginForm())
    {

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="wrapper">
            <h2>Iniciar Sesión</h2>
            <div class="form">
                <div class="input-box">
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @type = "text", @placeholder = "Ingresa tu email", @required = "" } })
                </div>
                <div class="input-box">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @type = "password", @placeholder = "Ingresa tu contraseña", @required = "" } })
                </div>

                <div class="input-box button">
                    <input type="Submit" value="Iniciar Sesión">
                </div>
                <div class="input-box button">
                    <a href="@Url.Action("Index","User")" class="btn btn-primary w-100 regresar" style="background-color: #4070f4; border-color: #4070f4;">Regresar</a>
                </div>
                <div class="text">
                    <h3>No tienes una cuenta?<a href="@Url.Action("Registration","User")"> Registrate ahora</a></h3>
                    <h3>Olvidaste tu contraseña?<a href="@Url.Action("ForgotPassword","User")"> Recuperarla </a></h3>
                </div>
            </div>
        </div>
    }
</body>
</html>
