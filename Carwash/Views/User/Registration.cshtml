@model Carwash.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Lavacar - Registrarse </title>
    <link rel="stylesheet" href="~/UserTemp/css/registration.css">
</head>
<body>
    @using (Html.BeginForm())
    {
        <div class="wrapper">
            <h2>Registrarse</h2>
            <div class="form">
                <div class="input-box">
                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @type = "text", @placeholder = "Ingresa tu usuario", @required = "" } })
                </div>
                <div class="input-box">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @type = "password", @placeholder = "Crea una contraseña", @required = "" } })
                </div>
                <div class="input-box button">
                    <input type="Submit" value="Registrarse">
                </div>
                <div class="text">
                    <h3>Ya tienes una cuenta?<a href="@Url.Action("Login","User")"> Iniciar sesión</a></h3>
                </div>
            </div>
        </div>
    }

</body>
</html>
